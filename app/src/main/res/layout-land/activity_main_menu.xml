<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenuActivity">

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:nestedScrollingEnabled="false"
        android:onClick="onStart"
        android:text="@string/start_button"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/playerOneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_one_lable"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/playerTwoTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/playerOneTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_above="@+id/playerTwoTextField"
        android:layout_alignLeft="@+id/playerTwoTextField"
        android:layout_alignParentStart="false"
        android:layout_toStartOf="@id/gridRadioGroup"
        android:layout_toEndOf="@id/playerOneTextView" />

    <TextView
        android:id="@+id/playerTwoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_two_lable"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/playerTwoTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/playerTwoTextView"
        android:layout_toEndOf="@+id/playerTwoTextView"
        android:layout_toStartOf="@id/gridRadioGroup" />

    <RadioGroup
        android:id="@+id/gridRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/startButton"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignRight="@+id/startButton">

        <RadioButton
            android:id="@+id/gridFiveRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:checked="true"
            android:text="@string/five_grid" />

        <RadioButton
            android:id="@+id/gridTenRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/ten_grid" />

        <RadioButton
            android:id="@+id/gridTwentyRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/twenty_grid" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/howtoplay"
            android:id="@+id/buttonInstructions"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/gridRadioGroup"
            android:layout_toLeftOf="@+id/playerTwoTextField"
            android:layout_toStartOf="@+id/playerTwoTextField"
            android:onClick="onHowtoPlay" />
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_above="@+id/playerOneTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/startButton"
        android:contentDescription="@string/splash"
        android:baselineAlignBottom="false"
        android:src="@drawable/splash" />

</RelativeLayout>
