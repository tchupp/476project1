<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:onClick="onRegister"
        android:text="@string/register"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/imageMainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/splash"
        android:focusable="false"
        android:src="@drawable/splash"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/howToPlayButton"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/howToPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onHowToPlay"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/how_to_play"
        android:layout_below="@+id/registerButton"
        android:layout_alignLeft="@+id/registerButton"
        android:layout_alignRight="@+id/registerButton" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLogin"
        android:text="@string/login"
        android:layout_alignRight="@+id/registerButton"
        android:layout_alignLeft="@+id/registerButton"
        android:layout_above="@+id/registerButton" />

</RelativeLayout>