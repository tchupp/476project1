<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenuActivity"
    android:id="@+id/mainLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button"
        android:id="@+id/startButton"
        android:nestedScrollingEnabled="false"
        android:onClick="onStart"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/player_one"
        android:id="@+id/playerOneTextView"
        android:layout_above="@+id/playerTwoTextView"
        android:layout_toStartOf="@id/mainLayout"
        android:layout_alignBottom="@+id/playerOneTextField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerOneTextField"
        android:layout_above="@+id/startButton"
        android:layout_alignParentEnd="false"
        android:inputType="text"
        android:layout_toLeftOf="@+id/startButton"
        android:layout_toEndOf="@id/playerOneTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/player_two"
        android:id="@+id/playerTwoTextView"
        android:layout_toStartOf="@id/mainLayout"
        android:layout_alignBottom="@+id/playerTwoTextField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerTwoTextField"
        android:layout_toEndOf="@id/playerTwoTextView"
        android:layout_alignParentEnd="false"
        android:inputType="text"
        android:layout_toLeftOf="@+id/startButton"
        android:layout_below="@+id/startButton" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fiveXFiveCheck"
        android:id="@+id/checkFrame"
        android:layout_below="@+id/playerTwoTextField"
        android:layout_margin="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/five_grid"
            android:id="@+id/fiveXFiveCheck"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/startButton"
            android:layout_toStartOf="@+id/startButton"
            android:layout_gravity="left|top" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ten_grid"
            android:id="@+id/tenXTenCheck"
            android:layout_gravity="center_horizontal|top" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twenty_grid"
            android:id="@+id/twentyXTwentyCheck"
            android:layout_gravity="right|top" />
    </FrameLayout>

</RelativeLayout>
